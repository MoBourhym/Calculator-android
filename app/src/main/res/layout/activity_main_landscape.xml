<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Display Area -->
    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:text="0"
        android:textColor="@android:color/black"

        android:textSize="100sp" />

    <!-- Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnAC"
            style="@style/CalcButtonAction"
            android:text="AC" />

        <Button
            android:id="@+id/btnPlusMinus"
            style="@style/CalcButtonAction"
            android:text="+/-" />

        <Button
            android:id="@+id/btnPercent"
            style="@style/CalcButtonAction"
            android:text="%" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/CalcButtonAction2"
            android:text="/" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn7"
            style="@style/CalcButtonNumber"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/CalcButtonNumber"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/CalcButtonNumber"
            android:text="9" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/CalcButtonAction2"
            android:text="x" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn4"
            style="@style/CalcButtonNumber"
            android:backgroundTint="#970000"
            android:text="4"
            android:textColorLink="#9B0303" />

        <Button
            android:id="@+id/btn5"
            style="@style/CalcButtonNumber"
            android:backgroundTint="#D10000"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/CalcButtonNumber"
            android:text="6" />

        <Button
            android:id="@+id/btnMinus"
            style="@style/CalcButtonAction2"
            android:text="-" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn1"
            style="@style/CalcButtonNumber"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/CalcButtonNumber"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/CalcButtonNumber"
            android:text="3" />

        <Button
            android:id="@+id/btnPlus"
            style="@style/CalcButtonAction2"
            android:text="+" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/btn0"
            style="@style/CalcButtonNumberZero"
            android:text="0" />

        <Button
            android:id="@+id/btnComma"
            style="@style/CalcButtonNumber"
            android:text="." />

        <Button
            android:id="@+id/btnEquals"
            style="@style/CalcButtonAction2"
            android:text="=" />
    </GridLayout>
</LinearLayout>